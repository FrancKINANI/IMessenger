<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_margin="8dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">

            <TextView android:id="@+id/tvReason" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Spam" android:textStyle="bold" android:textSize="16sp" android:textColor="@color/ismagi_red"/>

            <TextView android:id="@+id/tvStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PENDING" android:textSize="12sp" android:background="@drawable/rounded_bg_gray" android:paddingHorizontal="8dp" android:paddingVertical="4dp"/>

        </LinearLayout>

        <TextView android:id="@+id/tvTarget" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Target: Post ID 123..." android:textColor="@color/text_primary"/>

        <TextView android:id="@+id/tvDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Oct 20, 2025" android:textSize="12sp" android:textColor="@color/text_secondary"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="12dp" android:gravity="end">

            <Button android:id="@+id/btnDismiss" android:layout_width="wrap_content" android:layout_height="40dp" android:text="Dismiss" style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <Button android:id="@+id/btnTakeAction" android:layout_width="wrap_content" android:layout_height="40dp" android:text="Take Action" android:backgroundTint="@color/ismagi_red" android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
