<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_marginHorizontal="8dp" android:layout_marginVertical="4dp" app:cardCornerRadius="12dp" app:cardElevation="1dp" app:strokeWidth="0dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="12dp" android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/ivUserImage" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/logo" />

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:orientation="vertical">

            <TextView android:id="@+id/tvUserName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/text_primary" android:textSize="16sp" android:textStyle="bold" tools:text="Jane Smith" />

            <TextView android:id="@+id/tvUserEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/text_secondary" android:textSize="12sp" tools:text="jane.smith@ismagi.ma" />

            <TextView android:id="@+id/tvUserRole" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:background="@drawable/rounded_bg_gray" android:paddingHorizontal="6dp" android:paddingVertical="2dp" android:textColor="@color/text_secondary" android:textSize="10sp" tools:text="Student" />

        </LinearLayout>

        <ImageButton android:id="@+id/btnChangeRole" android:layout_width="36dp" android:layout_height="36dp" android:background="?attr/selectableItemBackgroundBorderless" android:src="@drawable/ic_role" app:tint="@color/ismagi_accent" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
